---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-[#0a2e5c] text-[#d4af37] py-8 border-t-4 border-[#d4af37]">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-serif">&copy; {currentYear} Chiefs Chronicle. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="hover:text-white transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>