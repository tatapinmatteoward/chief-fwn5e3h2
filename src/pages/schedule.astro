  { week: 2, opponent: "Houston Texans", date: "September 17, 2023", time: "1:00 PM ET", location: "Acrisure Stadium", result: "W 31-14" },
  { week: 3, opponent: "New York Jets", date: "September 24, 2023", time: "1:00 PM ET", location: "Acrisure Stadium", result: "L 13-10" },
  { week: 4, opponent: "Baltimore Ravens", date: "October 1, 2023", time: "1:00 PM ET", location: "Acrisure Stadium", result: "W 27-17" },
  { week: 5, opponent: "Tennessee Titans", date: "October 8, 2023", time: "1:00 PM ET", location: "Acrisure Stadium", result: "W 21-14" },
