---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Latest Steelers News: Igniting Black and Gold Fury";
const pageDescription = "Dive into the heart of Pittsburgh Steelers action with breaking news, player updates, game highlights, and fan reactions. Steel City Strikers keeps you fired up for every snap.";

const breakingNews = [
  {
    id: 1,
    title: "Roethlisberger's Retirement Reflections",
    excerpt: "The legendary QB shares stories from his 18-year career and hints at coaching aspirations.",
    date: "May 15, 2023"
  },
  {
    id: 2,
    title: "Draft Buzz: Defensive Talent in Focus",
    excerpt: "GM Kevin Colbert eyes edge rushers to bolster the Steel Curtain revival.",
    date: "May 14, 2023"
  },
  {
    id: 3,
    title: "T.J. Watt Returns to Practice",
    excerpt: "Rival Ravens fans trolled online; Pittsburgh faithful fires back with epic memes.",
    date: "May 13, 2023"
  }
];

const gameRecaps = [
  {
    id: 1,
    title: "Week 17 Thriller",
    result: "Steelers Clinch Playoff Berth",
    summary: "The Steelers pulled off a dramatic victory in a game that had everything. With a last-minute touchdown!"
  },
  {
    id: 2,
    title: "Week 16 Showdown",
    result: "Battleground Battle",
    summary: "A defensive slugfest that ended in a overtime thriller. The Steelers' defense stood tall."
  }
];

const recentHighlights = [
  { icon: "fas fa-drafting-compass", title: "Draft Buzz", content: "GM Kevin Colbert eyes defensive talent in the upcoming NFL Draft. Top prospects include edge rushers to bolster the Steel Curtain revival." },
  { icon: "fas fa-heartbeat", title: "Injury Updates", content: "T.J. Watt returns to practice after minor setback â€“ fans breathe a sigh of relief!" },
  { icon: "fas fa-users", title: "Fan Fury Alert", content: "Rival Ravens fans trolled online; Pittsburgh faithful fires back with epic memes." }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative overflow-hidden">
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-r from-gray-900 to-gray-800 py-20 md:py-32">
      <div class="absolute inset-0 bg-black opacity-70"></div>
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-10"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
            Latest Steelers News: <span class="text-amber-400">Igniting Black and Gold Fury</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto">
            Dive into the heart of Pittsburgh Steelers action with breaking news, player updates, game highlights, and fan reactions.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <button class="bg-amber-500 hover:bg-amber-600 text-gray-900 font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
              <i class="fas fa-newspaper mr-2"></i> Read Latest
            </button>
            <button class="bg-transparent border-2 border-amber-500 text-amber-500 hover:bg-amber-500 hover:text-gray-900 font-bold py-3 px-8 rounded-full text-lg transition-all duration-300">
              <i class="fas fa-play-circle mr-2"></i> Watch Highlights
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Banner -->
    <div class="bg-gradient-to-r from-amber-600 to-amber-800 py-4">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center items-center gap-6 text-white">
          <div class="flex items-center">
            <i class="fas fa-users text-2xl mr-2"></i>
            <span class="font-bold">120K+ Fans</span>
          </div>
          <div class="h-6 w-px bg-white"></div>
          <div class="flex items-center">
            <i class="fas fa-trophy text-2xl mr-2"></i>
            <span class="font-bold">6 Championships</span>
          </div>
          <div class="h-6 w-px bg-white"></div>
          <div class="flex items-center">
            <i class="fas fa-fire text-2xl mr-2"></i>
            <span class="font-bold">Steel City Strikers</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Breaking News Section -->
    <section class="py-16 bg-gray-100">
      <div class="container mx-auto px-4">
        <div class="flex items-center mb-10">
          <h2 class="text-3xl font-bold text-gray-900 mr-4">Breaking News</h2>
          <div class="h-1 flex-grow bg-gradient-to-r from-amber-500 to-amber-700 rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {breakingNews.map((news) => (
            <div key={news.id} class="bg-white rounded-xl shadow-xl overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
              <div class="h-48 bg-gradient-to-r from-gray-800 to-gray-900 flex items-center justify-center">
                <i class="fas fa-newspaper text-5xl text-amber-400"></i>
              </div>
              <div class="p-6">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="text-xl font-bold text-gray-900">{news.title}</h3>
                  <span class="bg-amber-100 text-amber-800 text-xs font-semibold px-2.5 py-0.5 rounded-full">
                    {news.date}
                  </span>
                </div>
                <p class="text-gray-600 mb-4">{news.excerpt}</p>
                <button class="text-amber-600 font-semibold flex items-center hover:text-amber-800">
                  Read Full Story <i class="fas fa-arrow-right ml-2 text-sm"></i>
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Game Recaps Section -->
    <section class="py-16 bg-gray-900 text-white">
      <div class="container mx-auto px-4">
        <div class="flex items-center mb-10">
          <h2 class="text-3xl font-bold mr-4">Game Recaps</h2>
          <div class="h-1 flex-grow bg-gradient-to-r from-amber-500 to-amber-700 rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {gameRecaps.map((game) => (
            <div key={game.id} class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl overflow-hidden shadow-2xl border border-gray-700">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <h3 class="text-2xl font-bold">{game.title}</h3>
                  <span class="bg-amber-500 text-gray-900 font-bold py-1 px-3 rounded-full">
                    {game.result}
                  </span>
                </div>
                <p class="text-gray-300 mb-6">{game.summary}</p>
                <div class="flex justify-between items-center">
                  <div class="flex items-center">
                    <div class="w-12 h-12 rounded-full bg-gradient-to-r from-amber-500 to-amber-700 flex items-center justify-center mr-3">
                      <span class="font-bold">S</span>
                    </div>
                    <span class="font-bold">Steelers</span>
                  </div>
                  <div class="text-2xl font-bold">28 - 21</div>
                  <div class="flex items-center">
                    <span class="font-bold mr-3">Ravens</span>
                    <div class="w-12 h-12 rounded-full bg-gradient-to-r from-gray-700 to-gray-900 flex items-center justify-center">
                      <span class="font-bold">R</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Highlights & Updates -->
    <section class="py-16 bg-gradient-to-br from-gray-50 to-gray-100">
      <div class="container mx-auto px-4">
        <div class="flex items-center mb-10">
          <h2 class="text-3xl font-bold text-gray-900 mr-4">Recent Highlights</h2>
          <div class="h-1 flex-grow bg-gradient-to-r from-amber-500 to-amber-700 rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {recentHighlights.map((highlight, index) => (
            <div key={index} class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="w-16 h-16 rounded-full bg-gradient-to-r from-amber-500 to-amber-700 flex items-center justify-center mb-4">
                <i class={`${highlight.icon} text-2xl text-white`}></i>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{highlight.title}</h3>
              <p class="text-gray-600">{highlight.content}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Fan Fury Section -->
    <section class="py-16 bg-gradient-to-r from-amber-700 to-amber-900 text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Fan Fury Alert</h2>
          <p class="text-xl mb-10 max-w-2xl mx-auto">
            Pittsburgh faithful have been responding to online trolls with epic memes and social media outrage!
          </p>
          
          <div class="bg-black bg-opacity-30 rounded-xl p-8 mb-10">
            <div class="flex flex-col md:flex-row items-center justify-between gap-6">
              <div class="flex-1 text-left">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 rounded-full bg-gradient-to-r from-amber-500 to-amber-700 flex items-center justify-center mr-4">
                    <i class="fas fa-fire text-xl"></i>
                  </div>
                  <div>
                    <h4 class="font-bold text-lg">Steel City Strikers</h4>
                    <p class="text-amber-200 text-sm">Official Fan Page</p>
                  </div>
                </div>
                <p class="mb-4">"When the Ravens fans start trolling us, we just send them back 10x harder. Pittsburgh pride is unbreakable!"</p>
                <div class="flex gap-2">
                  <span class="bg-amber-800 bg-opacity-50 px-3 py-1 rounded-full text-sm">#SteelCity</span>
                  <span class="bg-amber-800 bg-opacity-50 px-3 py-1 rounded-full text-sm">#BlackAndGold</span>
                  <span class="bg-amber-800 bg-opacity-50 px-3 py-1 rounded-full text-sm">#SteelersNation</span>
                </div>
              </div>
              <div class="w-32 h-32 rounded-full bg-gradient-to-r from-amber-500 to-amber-700 flex items-center justify-center">
                <i class="fas fa-users text-4xl"></i>
              </div>
            </div>
          </div>
          
          <button class="bg-white text-amber-800 hover:bg-amber-100 font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 flex items-center mx-auto">
            <i class="fas fa-hashtag mr-2"></i> Join the Fury
          </button>
        </div>
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="py-16 bg-gradient-to-br from-gray-900 to-black text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-4">Stay Fired Up</h2>
          <p class="text-xl mb-8 text-gray-300">
            Subscribe to our newsletter for the latest Steelers news and exclusive content
          </p>
          <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
            <input 
              type="email" 
              placeholder="Your email address" 
              class="flex-grow px-6 py-3 rounded-full text-gray-900 focus:outline-none focus:ring-2 focus:ring-amber-500"
            />
            <button class="bg-amber-500 hover:bg-amber-600 text-gray-900 font-bold py-3 px-8 rounded-full transition-all duration-300 transform hover:scale-105">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes glow {
    0% {
      box-shadow: 0 0 5px rgba(246, 173, 85, 0.5);
    }
    50% {
      box-shadow: 0 0 20px rgba(246, 173, 85, 0.8);
    }
    100% {
      box-shadow: 0 0 5px rgba(246, 173, 85, 0.5);
    }
  }

  .animate-glow {
    animation: glow 2s infinite;
  }

  .pulse {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }
</style>